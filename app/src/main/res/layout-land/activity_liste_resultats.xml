<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <fragment
            android:id="@+id/recherche"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            class="com.eni.ecole.cdi.douze.recipepuppy.RechercheFragment"
            ></fragment>
        <fragment
            android:id="@+id/liste_recherche"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="com.eni.ecole.cdi.douze.recipepuppy.ListeResultatsFragment"
            ></fragment>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_recette"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">
        <fragment
            android:id="@+id/recette"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="com.eni.ecole.cdi.douze.recipepuppy.RecetteFragment"
            ></fragment>
    </LinearLayout>
</LinearLayout>
